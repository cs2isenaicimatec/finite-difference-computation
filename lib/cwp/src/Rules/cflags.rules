
# CFLAGS for X-windows codes 
XCFLAGS = -I$I -I$(IX11) $(OPTC) $(LARGE_FILE_FLAG) $(ENDIANFLAG)

# CFLAGS for Motif codes
XMCFLAGS = -I$I -I$(IMOTIF) -I$(IX11) $(OPTC) $(LARGE_FILE_FLAG)  $(ENDIANFLAG)

# CFLAGS for Triangulation codes
TRICFLAGS = -I$I -I$(ITRI) $(OPTC) $(LARGE_FILE_FLAG) $(ENDIANFLAG)

# CFLAGS for Tetrahedra codes
TETRACFLAGS = -I$I -I$(ITETRA) $(OPTC) $(LARGE_FILE_FLAG) $(ENDIANFLAG)

# CFLAGS for Wavelet packet compression  codes
WPCCFLAGS = -I$I -I$(IWPC) $(OPTC) $(LARGE_FILE_FLAG) $(ENDIANFLAG)

# CFLAGS for Discrete Cosine Transform compression codes
DCTCFLAGS = -I$I -I$(IDCT) $(OPTC) $(LARGE_FILE_FLAG) $(ENDIANFLAG)

# CFLAGS for Open GL/ Mesa applications
MGLCFLAGS = -I$I -I$(IMGL) -I$(IGLUT) -I$(IGL) -I$(IX11) $(OPTC) $(LARGE_FILE_FLAG) $(ENDIANFLAG)
